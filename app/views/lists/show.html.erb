<h1><%= @list.name %></h1>

<ul>
<% @list.bookmarks.each do |bookmark| %>
<li><%= bookmark.comment %> - <%= bookmark.movie.title %> / <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete} %></li>
<% end %>
</ul>


<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>
