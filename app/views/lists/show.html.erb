<h1><%= @list.name %></h1>

<ul>
<% @list.bookmarks.each do |bookmark| %>
<li><%= bookmark.comment %> - <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete} %></li>
<% end %>
</ul>

<% @list.movies.each do |movie| %>
<li><%= movie.title %></li>
<img src="<%= movie.poster_url %>" alt="">
<% end %>
</ul>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>
