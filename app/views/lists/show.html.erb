 <%= render "shared/navbar" %>

<div class="card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')"><%= @list.name %>
</div>


<ul>
<% @list.bookmarks.each do |bookmark| %>
<li><%= bookmark.comment %> - <%= bookmark.movie.title %> / <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete} %></li>
<% end %>
</ul>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>
